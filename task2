//~~
//  Задание 2.
//  Ввод символа с клавиатуры(с проверкой что это именно символ(цифра или буква латинского алфавита)), ввод строки с клавиатуры
//  (с проверкой что это именно строка (длина более 1-го символа)). Вывод в консоль номера, который символ занимает в строке, если он там есть.
//  Если нет — вывод сообщения об отсутствии символа.
//~~

#include <iostream>
#include <string>

int main()
{
	setlocale(LC_ALL, "Russian");

	std::string stroka;
	char a;
	bool flag = 0;                                        //флаг = 0, указывает, что символ не найден

	std::cout << "Введите символ: \n";                    //ввод
	std::cin >> a;

	if (isdigit(a) == 0 && isalpha(a) == 0) {             //проверка символа
		std::cout << "\nОшибка, введён не символ! \n";
		return 0;
	}

	std::cout << "\nВведите строку: \n";                  //ввод
	std::cin >> stroka;

	if (stroka.size() < 2) {                              //проверка строки
		std::cout << "\nОшибка, введена не строка! \n";
		return 0;
	}

	for (int i = 0; i < stroka.size(); i++)
		if (stroka[i] == a) {
			flag = 1;                                         //как только находится символ в строке, флаг = 1, значит найден
			std::cout << "\nСимвол найден на " << i + 1 << "м месте в строке!\n";
		}

	if (flag == 0)
		std::cout << "\nТакого символа нет в строке :(" << std::endl;

	return 0;
} 
